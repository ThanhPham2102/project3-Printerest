<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Collection Pinterest</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
    />
    <style>
      td {
        word-break: break-word;
      }

      .action {
        width: 130px;
        text-align: center;
      }

      h2 {
        margin: 30px 0 !important;
      }

      .password {
        width: 300px;
      }

      input {
        background-color: transparent;
        border: none;
        border-bottom: 1px solid rgb(72, 72, 72);
        color: white;
        width: 100px;
      }

      input:focus {
        outline: none;
      }
    </style>
  </head>

  <body>
    <ul class="nav nav-tabs navbar-dark bg-dark">
      <li class="nav-item">
        <a
          class="nav-link signout-btn"
          aria-current="page"
          href="http://localhost:8000/admin/28408"
          >Manager Users Pinterest</a
        >
      </li>
      <li class="nav-item">
        <a
          class="nav-link active signout-btn"
          href="http://localhost:8000/blogs"
          >Manager Photos Pinterest</a
        >
      </li>
      <li class="nav-item">
        <a class="nav-link" href="http://localhost:8000/collection"
          >Manager Collections Pinterest</a
        >
      </li>
      <li class="nav-item">
        <a
          class="nav-link signout-btn"
          href="http://localhost:8000/collectionphoto"
          >Manager Collections_Photos Pinterest</a
        >
      </li>
      <li class="nav-item">
        <a class="nav-link signout-btn" href="#">Logout</a>
      </li>
    </ul>

    <div class="container">
      <div class="row">
        <h2>Collection Pinterest</h2>
      </div>
    </div>

    <div class="container" style="padding: 0">
      <div class="message"></div>
    </div>

    <div class="container">
      <div class="row">
        <table class="table table-dark table-striped table-bordered">
          <thead>
            <tr>
              <th>#</th>
              <th>Id</th>
              <th>Photo Name</th>
              <th style="max-width: 300px">Url</th>
              <th>Date Created</th>
              <th>UserId</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for( let i=0; i < rows.length; i++ ) { %>

            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= rows[i].id %></td>
              <td><%= rows[i].photo_name %></td>
              <td style="word-break: break-all">
                <img
                  style="width: 60px; height: 60px"
                  src="<%= rows[i].img_url %>"
                  alt=""
                />
              </td>
              <td><%= rows[i].created_at %></td>
              <td><%= rows[i].user_id %></td>
              <td>
                <a
                  id="udpate-<%= rows[i].id %>"
                  class="btn-update settings"
                  title="Settings"
                  data-toggle="tooltip"
                  ><i class="material-icons">&#xE8B8;</i></a
                >
                <a
                  id="<%= rows[i].id %>"
                  class="btn-delete delete"
                  title="Delete"
                  data-toggle="tooltip"
                  ><i class="material-icons">&#xE5C9;</i></a
                >
              </td>
            </tr>

            <% } %>
          </tbody>
        </table>
      </div>
      <div class="container">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="#">Previous</a>
            </li>
            <% for( let i=1; i <=Math.ceil(total/page_size_blogs); i++ ) { %>
            <li class="page-item">
              <a
                class="page-link"
                href="/blogs?page_size_blogs=<%= page_size_blogs %>&page_index_blogs=<%= i %>"
              >
                <%=i%>
              </a>
            </li>
            <% } %>

            <li class="page-item"><a class="page-link" href="#">Next</a></li>
          </ul>
        </nav>
      </div>
    </div>
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js
    "></script>
    <script src="/js/users.js"></script>
  </body>
</html>
