<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      href="https://seeklogo.com/images/P/pinterest-icon-logo-D4965B6748-seeklogo.com.png"
    />
    <title>Collection Pinterest</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
    />
    <style>
      td {
        word-break: break-word;
      }

      .action {
        width: 130px;
        text-align: center;
      }

      h2 {
        margin: 30px 0 !important;
      }

      .password {
        width: 300px;
      }

      input {
        background-color: transparent;
        border: none;
        border-bottom: 1px solid rgb(72, 72, 72);
        color: white;
        width: 100px;
      }

      input:focus {
        outline: none;
      }
    </style>
  </head>

  <body>
    <ul class="nav nav-tabs navbar-dark bg-dark">
      <li class="nav-item">
        <a
          class="nav-link"
          id="btn-users"
          aria-current="page"
          href="http://localhost:8000/admin/users"
          >Users Pinterest</a
        >
      </li>
      <li class="nav-item">
        <a
          class="nav-link active"
          id="btn-photo"
          aria-current="page"
          href="http://localhost:8000/admin/photo"
          >Photo Pinterest</a
        >
      </li>
      <li class="nav-item">
        <a
          class="nav-link"
          id="btn-collection"
          aria-current="page"
          href="http://localhost:8000/admin/collection"
          >Collection Pinterest</a
        >
      </li>
      <li class="nav-item">
        <a
          class="nav-link"
          id="btn-collectionphoto"
          aria-current="page"
          href="http://localhost:8000/admin/collectionphoto"
          >Collection Photo Pinterest</a
        >
      </li>
    </ul>

    <div class="container">
      <div class="row">
        <h2>Collection Pinterest</h2>
      </div>
    </div>

    <div class="container" style="padding: 0">
      <div class="message"></div>
    </div>

    <div class="container">
      <div class="row">
        <table class="table table-dark table-striped table-bordered">
          <thead>
            <tr>
              <th>#</th>
              <th>Id</th>
              <th>Photo Name</th>
              <th style="max-width: 300px">Url</th>
              <th>Date Created</th>
              <th>UserId</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody id="tbody">
            <% for( let i=0; i < rows.length; i++ ) { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= rows[i].id %></td>
              <td><%= rows[i].photo_name %></td>
              <td>
                <img
                  style="width: 30px; height: 30px"
                  src="<%= rows[i].img_url %>"
                  alt=""
                />
              </td>
              <td><%= rows[i].created_at %></td>
              <td><%= rows[i].user_id %></td>
              <td class="action">
                <span id="<%= rows[i].id %>" class="btn-delete btn btn-danger">
                  <ion-icon name="trash-outline"></ion-icon>
                </span>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="container">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="#">Previous</a>
            </li>
            <% for( let i=1; i <=Math.ceil(total/page_size_photos); i++ ) { %>
            <li class="page-item">
              <a
                class="page-link"
                href="/users?page_size=<%=page_size_photos%>&page_index=<%=i%>"
              >
                <%=i%>
              </a>
            </li>
            <% } %>

            <li class="page-item"><a class="page-link" href="#">Next</a></li>
          </ul>
        </nav>
      </div>
    </div>

    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js
    "></script>
    <script src="/js/photo.js"></script>
  </body>
</html>
